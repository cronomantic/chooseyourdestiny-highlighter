{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ChooseYourDestiny",
	"patterns": [
		{
			"include": "#code"
		},
		{
			"include": "#text"
		}
	],
	"repository": {
		"text": {
			"name": "string.other.cyd"
		},
		"code": {
			"name": "keyword.other.unit.cyd",
			"begin": "\\[\\[",
			"end": "\\]\\]",
			"captures": {
				"0": {
					"name": "punctuation.definition.cyd"
				}
			},
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#operands"
				},
				{
					"include": "#indirection"
				},
				{
					"include": "#label"
				},
				{
					"include": "#goto"
				},
				{
					"include": "#gosub"
				},
				{
					"include": "#set_to"
				},
				{
					"include": "#declare_as"
				},
				{
					"include": "#short_label"
				}
			]
		},
		"comments": {
			"name": "comment.block.cyd",
			"begin": "/\\*",
			"end": "\\*/",
			"captures": {
				"0": {
					"name": "punctuation.definition.comment.cyd"
				}
			}
		},
		"keywords": {
			"name": "keyword.cyd",
			"match": "(?i)\\b(END|RETURN|IF|THEN|ELSE|ENDIF|WHILE|WEND|AND|OR|NOT|INK|PAPER|BORDER|AT|PRINT|MARGINS|PICTURE|DISPLAY|RANDOM|RANDOMIZE|CENTER|OPTION|WAITKEY|INKEY|WAIT|PAUSE|CHOOSE|TYPERATE|CLEAR|PAGEPAUSE|CHAR|TAB|BRIGHT|FLASH|SFX|TRACK|PLAY|LOOP|NEWLINE|REPCHAR|MIN|MAX|POSX|POSY)\\b"
		},
		"operands": {
			"name": "keyword.operator.cyd",
			"match": "(?i)\\-|\\+|<=|>=|<>|<|>|=|!|\\||&|\\b(AND|OR|NOT)\\b"
		},
		"short_label": {
			"name": "variable.other.cyd",
			"match": "(#)[a-zA-Z_][a-zA-Z0-9_]*?\\b",
			"captures": {
				"1": {
					"name": "keyword.operator.new"
				}
			}
		},
		"label": {
			"name": "variable.other.cyd",
			"match": "(?i)(LABEL\\s*)([a-zA-Z_][a-zA-Z0-9_]*?)\\b",
			"captures": {
				"1": {
					"name": "keyword.operator.new"
				}
			}
		},
		"goto": {
			"name": "variable.name.cyd",
			"match": "(?i)(GOTO\\s*)([a-zA-Z_][a-zA-Z0-9_]*?)\\b",
			"captures": {
				"1": {
					"name": "keyword.control.cyd"
				}
			}
		},
		"gosub": {
			"name": "variable.name.cyd",
			"match": "(?i)(GOSUB\\s*)([a-zA-Z_][a-zA-Z0-9_]*?)\\b",
			"captures": {
				"1": {
					"name": "keyword.control.cyd"
				}
			}
		},
		"set_to": {
			"name": "variable.name.cyd",
			"match": "(?i)(SET\\s*)(\\[?[a-zA-Z_][a-zA-Z0-9_]*?\\]?)(\\s*TO\\s*)\\b",
			"captures": {
				"1": {
					"name": "keyword.cyd"
				},
				"3": {
					"name": "keyword.cyd"
				}
			}
		},
		"declare_as": {
			"name": "variable.name.cyd",
			"match": "(?i)(DECLARE\\s*)([0-9][0-9]*?)(\\s*AS\\s*)([a-zA-Z_][a-zA-Z0-9_]*?)\\b",
			"captures": {
				"1": {
					"name": "keyword.cyd"
				},
				"3": {
					"name": "keyword.cyd"
				}
			}
		},
		"indirection": {
			"name": "variable.name.cyd",
			"match": "@@?[a-zA-Z_][a-zA-Z0-9_]*?\\b"
		}
	},
	"scopeName": "source.cyd"
}